

{% extends 'base.html.twig' %}

{% block body %}
    <h2>Login</h2>

    <form method="post">
        {{ form_row(loginForm.email) }}
        {{ form_row(loginForm.password) }}
        <button type="submit">Login</button>
    </form>

    {# Display login error if there is one #}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
{% endblock %}
